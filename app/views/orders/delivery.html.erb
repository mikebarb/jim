<p id="notice"><%= notice %></p>

<div class="wrapper">
  <h1 class="deliverydocketheader">Deliveries for: <%= Date.parse(@current_day).strftime("%A %d %B %Y") %> </h1>
</div>
<h2><%= link_to 'PDF Version', ordersdeliverypdf_path %></h2>

<% @previous_shop = "" %>
<% @delivery.sort_by(&:title).sort_by(&:sector_name).sort_by(&:shop_name).each do |deliver| %>
  <% logger.debug("primary loop: " + deliver.inspect + " : " + deliver.sector_name + " : " + deliver.title + " : " + deliver.shop_name) %>
  <% if @previous_shop != deliver.shop_name %>
    <% logger.debug("shop change") %>
    <% @previous_shop = deliver.shop_name %>
    </tbody>
    </table>
    </div>
    </div>
    <% @previous_sector = "" %>
    <div class="wrapper">
      <div class="shop-name">
        <img class="img-name" src="data:image/png;base64, " />
        <div class="img-bar">
          <h1><%= deliver.shop_name %></h1>
        </div>
      </div>
      <div class="column-left">
        <h2 class="info-name"><%= @bakery.name %></h1>
        <div class="info">
          <% @bakeryA.each do |a| %>
            <%= a %></br>
          <% end %>
          </br>
          <b>Delivery Date:</b></br>
          <%= Date.parse(@current_day).strftime("%A %d %B %Y") %>
        </div>
      </div><!--
   --><div class="column-right">
        <% logger.debug("passing through div for column-right") %>
        <h2 class="info-name">Description</h2>
  <% end %>
  <% if @previous_sector != deliver.sector_name %>
    <% logger.debug("changing sectors: " + @previous_sector + "->" + deliver.sector_name) %>
    <% if @previous_sector != "" %>
      <% logger.debug("previous sector is not blank***: " + @previous_sector.inspect) %>
      </tbody>
      </table>
    <% end %>
    <% @previous_sector = deliver.sector_name %>
    <h2><%= deliver.sector_name %></h2>

    <table>
      <thead>
        <tr>
          <th>Product</th>
          <th>Quantity</th>
        </tr>
      </thead>
      <tbody>
  <% end %>          
  <tr>
    <td><%= deliver.title %></td>
    <td><%= deliver.quantity %></td>
  </tr>
<% end %>
<% if @previous_sector != "" %>
  </tbody>
  </table>
  </div>
  </div>
<% end %>
