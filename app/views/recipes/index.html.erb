<p id="notice"><%= notice %></p>

<h1>Recipes</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Amount</th>
      <th>Unit</th>
      <th>Ingredient</th>
      <th colspan="3"><%= link_to 'New Recipe', new_recipe_path %></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.title %></td>
        <td><%= recipe.amount %></td>
        <td><%= recipe.unit %></td>
        <td><%= recipe.item %></td>
        <% unless recipe.amount.nil? %>
          <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
          <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path %>
