<p id="notice"><%= notice %></p>

<h1>Usershops</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Shop</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usershops.each do |usershop| %>
      <tr>
        <td><%= usershop.user.name %></td>
        <td><%= usershop.shop.name %></td>
        <td><%= link_to 'Show', usershop %></td>
        <td><%= link_to 'Edit', edit_usershop_path(usershop) %></td>
        <td><%= link_to 'Destroy', usershop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Usershop', new_usershop_path %>
